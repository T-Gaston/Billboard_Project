<h1><%= @artist.id ? 'Edit Artist Info' : 'Add New Artist' %></h1>
<hr />
<%= form_for @artist do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <%= f.submit %>
<% end %>
<hr />
<%= @artist.id ? (link_to 'Back to Artist Page', artist_path(@artist)) : (link_to 'Back to Homepage', artists_path) %>
