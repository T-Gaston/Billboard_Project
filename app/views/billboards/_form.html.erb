<h1><%= @billboard.id ? 'Edit Billboard' : 'Add New Billboard' %></h1>
<hr />
<%= form_for @billboard do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <%= f.submit %>
<% end %>
<hr />
<%= @billboard.id ? (link_to 'Back to Billboard', billboard_path(@billboard)) : (link_to 'Back to Billboards', billboards_path) %>